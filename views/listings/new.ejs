<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
     <h3>Create a New Listing</h3>
     <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="from-label">Title</label>
                <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required />
                <div class="valid-feedback">Title looks good</div>
                
            </div>

            <div class="mb-3">
                <label for="description" class="from-label">Description</label>
                <textarea name="listing[description]"
                          class="form-control" required></textarea>
                <div class="ivalid-feedback">Please enter a short description</div>
            </div>

            <div class="mb-3">
                <label for="image" class="from-label">Upload Listing image</label>
                <input name="listing[image]" type="file" class="form-control" />
                required
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="from-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" class="form-control" required />
                    <div class="ivalid-feedback">Please enter a valid Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="from-label">Country</label>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
                    <div class="ivalid-feedback">Please enter a country name</div>
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="from-label">Location</label>
                <input name="listing[location]"
                       placeholder="enter location"
                       type="text" class="form-control" required />
                <div class="ivalid-feedback">Please enter a location</div>
            </div>
            <button class="btn btn-dark add-btn mt-3">Add</button>
     </form>
    </div>
</div>